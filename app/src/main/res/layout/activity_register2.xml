<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.example.zt.weibo.activity.Register2Activity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/my_color"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/register2_back"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@null"
            android:drawableLeft="@drawable/back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="7"
            android:gravity="center"
            android:text="微博用户注册"
            android:textSize="15sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="fill_vertical|center" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/weibo" />

    <EditText
        android:id="@+id/register_passoword2"
        style="@style/zhuce_Edit"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/register_passoword"
        android:layout_alignStart="@+id/register_passoword"
        android:layout_alignLeft="@+id/register_passoword"
        android:layout_alignEnd="@+id/register_passoword"
        android:layout_alignRight="@+id/register_passoword"
        android:background="@drawable/zhuce1"
        android:drawableLeft="@drawable/user"
        android:hint="确认您的密码"
        android:inputType="phone" />

    <EditText
        android:id="@+id/register_passoword"
        style="@style/zhuce_Edit"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/zhuce"
        android:drawableLeft="@drawable/user"
        android:hint="输入您的密码"
        android:inputType="phone" />

    <Button

        android:id="@+id/register_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/register_passoword2"
        android:layout_alignLeft="@+id/register_passoword2"
        android:layout_alignEnd="@+id/register_passoword2"
        android:layout_alignRight="@+id/register_passoword2"
        android:layout_centerVertical="true"
        android:background="@drawable/zhuce_ensure"
        android:text="注册"
        android:textSize="20sp" />

</RelativeLayout>

