<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
                android:background="@color/main_color"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.zt.weibo.activity.GreetActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:src="@drawable/weibo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="80dp"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:ems="1"
        android:text="@string/load"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#463D33" />

    <Button
        android:id="@+id/greet_button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:background="@drawable/greet_btn"
        android:text="进入"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <View
        android:id="@+id/view"
        android:layout_width="500dp"
        android:layout_height="1dp"
        android:layout_above="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:background="#575147" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Copyright ©2020"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#616060" />


</RelativeLayout>
